#!/bin/sh

# Prevent Ubuntu/Gnome from overriding keyboard settings
gsettings set org.gnome.settings-daemon.plugins.keyboard active false &

# Set keyboard layout
(sleep 1; setxkbmap -layout us,de,ara -option grp:win_space_toggle) &

# Background: Start status bar and visuals
slstatus &
feh --bg-scale /usr/share/backgrounds/Fuwafuwa_nanbatto_san_by_amaral-dark.png &
picom -b &

# Start: Execute DWM
exec dwm